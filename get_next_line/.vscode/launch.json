{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Déboguer mon programme C",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Activer la saisie semi-automatique pour GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Ignorer les fonctions système",
          "text": "set step-mode on",
          "ignoreFailures": true
        },
        {
          "description": "Ignorer le démarrage de libc",
          "text": "skip file libc-start.c",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "/home/alex/get_next_line_git",
      "program": "/home/alex/get_next_line_git/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}